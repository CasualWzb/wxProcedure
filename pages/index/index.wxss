/**index.wxss**/
.container{
  margin: 0;
  padding: 0;
  font-size: 15px;
  list-style: none;
  box-sizing: border-box;
  background-color: #fcfcfd;
  font-family: 微软雅黑;
}
.title{
  width: 100%;
  height: 40px;
  position: fixed;
  background-color: #fff;
  top: 0;
  display: flex;
  border-bottom: 1px solid #ececec;
  z-index: 10;
}
 .text{
  width: 70px;
  height: 40px;
  display: inline-block;
  border-bottom: 1px solid #d33a31;
}
.title view{
  flex: 1;
  text-align: center;
  line-height: 50px;
  color: #d33a31;
}
.titleLight{
   width: 100%;
   height: 40px;
}
.musicList{
  width: 100%;
  height: 20px;
  margin-top: 20px;
  position: relative;
  margin-bottom: 14px;
  font-size: 17px;
  line-height: 20px;
  color: #333;
  text-indent: 2%;
}
.musicList::before{
    content: "   ";
    position: absolute;
    left: 0;
    top: 60%;
    margin-top: -9px;
    width: 2px;
    height: 16px;
    background-color: #d33a31;
}
.wx-swiper-dot{
  background-color: #fff;
}
.singList{
  width: 365px;
  float: right;
  height: 55px;
  border-bottom: 1px solid #ececec;
}
.singName{
  width:323px;
  height: 25px;
  font-size: 17px;
  line-height: 30px;
}
.singerName{
  width:323px;
  height: 18px;
  font-size: 12px;
  color: #888;
  line-height: 18px;
  margin-top: 2%;
}
.nameBefroe{
  display: inline-block;
  width: 12px;
  height: 8px;
  background-position: -24px 0;
  background: url(http://s3.music.126.net/m/s/img/index_icon_2x.png?5207a28c3767992ca4bb6d4887c74880) no-repeat;
  background-size: 166px 97px;
  margin-right: 6px;
}
image{
  display: inline-block;
  width: 22px;
  height: 22px;
  background: url(img/播放.png);
  background-size: 100%;
  margin: 0 auto;
  position: absolute;
  top: 25%;
  right: 15%;  
}
.audioPlay{
  float: right;
  width: 42px;
  height: 55px;
  padding: 0 10px;
  position: relative;
}